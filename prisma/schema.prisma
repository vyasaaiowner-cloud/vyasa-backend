generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  SCHOOL_ADMIN
  TEACHER
  PARENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

enum OtpType {
  PHONE
  EMAIL
}

model School {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      User[]
  students   Student[]
  teachers   Teacher[]
  attendance Attendance[]
  profile    SchoolProfile?
  gallery    SchoolGallery[]
  announcements Announcement[]
  feePlans   FeePlan[]
  invoices   Invoice[]
  payments   Payment[]
  enquiries  AdmissionEnquiry[]
}

model User {
  id          String   @id @default(cuid())

  phoneCode   String
  phoneNumber String
  phoneE164   String   @unique

  email       String?  @unique
  emailVerified Boolean @default(false)

  name        String
  role        Role

  schoolId    String
  school      School   @relation(fields: [schoolId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teacherProfile Teacher?
  parentLinks    ParentStudent[] @relation("ParentLinks")

  @@index([schoolId])
  @@index([role])
}

model Student {
  id         String   @id @default(cuid())
  name       String
  className  String
  section    String
  rollNo     Int
  schoolId   String
  school     School   @relation(fields: [schoolId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Parents mapped through join table
  parents ParentStudent[]

  // Attendance records
  attendance Attendance[]

  // Invoices
  invoices Invoice[]

  @@unique([schoolId, className, section, rollNo])
  @@index([schoolId, className, section])
}

model ParentStudent {
  id        String  @id @default(cuid())
  parentId  String
  studentId String

  parent    User    @relation("ParentLinks", fields: [parentId], references: [id])
  student   Student @relation(fields: [studentId], references: [id])

  @@unique([parentId, studentId])
  @@index([studentId])
  @@index([parentId])
}

model Teacher {
  id        String   @id @default(cuid())
  userId    String   @unique
  schoolId  String
  user      User     @relation(fields: [userId], references: [id])
  school    School   @relation(fields: [schoolId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([schoolId])
}

model Attendance {
  id        String           @id @default(cuid())
  date      DateTime
  status    AttendanceStatus
  studentId String
  schoolId  String

  student   Student          @relation(fields: [studentId], references: [id])
  school    School           @relation(fields: [schoolId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, date, schoolId])
  @@index([schoolId, date])
  @@index([studentId, date])
}

model SchoolProfile {
  id          String   @id @default(cuid())
  schoolId    String   @unique
  school      School   @relation(fields: [schoolId], references: [id])
  description String?
  address     String?
  contact     String?
  website     String?
  logoUrl     String?
  bannerUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SchoolGallery {
  id        String   @id @default(cuid())
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  imageUrl  String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([schoolId])
}

model Announcement {
  id        String   @id @default(cuid())
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  title     String
  content   String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([schoolId])
}

model FeePlan {
  id        String   @id @default(cuid())
  schoolId  String
  school    School  @relation(fields: [schoolId], references: [id])
  name      String
  amount    Decimal @db.Decimal(10,2)
  frequency String
  className String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices  Invoice[]

  @@index([schoolId])
}

model Invoice {
  id        String   @id @default(cuid())
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  feePlanId String
  feePlan   FeePlan  @relation(fields: [feePlanId], references: [id])
  amount    Decimal @db.Decimal(10,2)
  dueDate   DateTime
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments  Payment[]

  @@index([schoolId])
  @@index([studentId])
}

model Payment {
  id            String   @id @default(cuid())
  schoolId      String
  school        School   @relation(fields: [schoolId], references: [id])
  invoiceId     String
  invoice       Invoice  @relation(fields: [invoiceId], references: [id])
  amount        Decimal @db.Decimal(10,2)
  method        String
  transactionId String   @unique
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([schoolId])
  @@index([invoiceId])
}

model AdmissionEnquiry {
  id          String   @id @default(cuid())
  schoolId    String
  school      School   @relation(fields: [schoolId], references: [id])
  parentName  String
  parentPhone String
  studentName String
  className   String
  message     String?
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([schoolId])
}

model Otp {
  id           String   @id @default(cuid())
  contact      String   // E.164 for phone, lowercase email for email
  type         OtpType
  codeHash     String
  expiresAt    DateTime
  used         Boolean  @default(false)
  attempts     Int      @default(0)  // Track failed verification attempts
  createdAt    DateTime @default(now())

  @@index([contact, type])
  @@index([expiresAt])
}

model OtpRateLimit {
  id        String   @id @default(cuid())
  contact   String   // phone or email
  ipAddress String
  count     Int      @default(1)
  expiresAt DateTime // rate limit window expiry
  createdAt DateTime @default(now())

  @@unique([contact, ipAddress])
}
